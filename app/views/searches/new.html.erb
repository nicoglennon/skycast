<% if logged_in? %>
  <%= link_to current_user.username, user_path(current_user) %>
<% end %>

<h1>Searches#new</h1>

<%= form_tag("/search/results", method: "get") do %>
  <%= label_tag(:location, "Search for weather in:") %>
  <%= text_field_tag(:location) %>
  <%= submit_tag "Search Weather", name: nil %>
<% end %>

<% if @error %>
  <p><%= @error %></p>
<% end %>
