<% if logged_in? %>
  <p><%= current_user.username %></p>
<% end %>

<h1>Searches#new</h1>

<%= form_tag("/search/results", method: "get") do %>
  <%= label_tag(:location, "Search for weather in:") %>
  <%= text_field_tag(:location) %>
  <%= submit_tag "Search Weather", name: nil %>
<% end %>

<% if @error %>
  <p><%= @error %></p>
<% end %>
